package:
  name: kotsadm-migrations-head
  version: "0.0.1" # our versioning is not compatible with apk
  epoch: 0
  description: kotsadm-migrations package
  copyright:
    - license: Apache-2.0

environment:
  contents:
    repositories:
      - https://apk.cve0.io
    keyring:
      - https://apk.cve0.io/key/cve0-signing.rsa.pub
    packages:
      - busybox

pipeline:
  - runs: |
      set -x
      export DESTDIR="${{targets.destdir}}"
      mkdir -p "${DESTDIR}"

      mv tables "${DESTDIR}/tables"
