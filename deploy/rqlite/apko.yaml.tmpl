contents:
  repositories:
    - https://packages.wolfi.dev/os
  keyring:
    - https://packages.wolfi.dev/os/wolfi-signing.rsa.pub
  packages:
    - rqlite=__RQLITE_VERSION__
    - rqlite-oci-entrypoint=__RQLITE_VERSION__
    - bash

accounts:
  groups:
    - groupname: rqlite
      gid: 1001
  users:
    - username: rqlite
      uid: 1001
      gid: 1001
  run-as: rqlite

entrypoint:
  command: docker-entrypoint.sh

cmd: rqlite
