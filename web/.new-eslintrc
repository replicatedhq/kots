{
  // default parser does not support stage 3 so use this
  "parser": "@babel/eslint-parser",
  "extends": [
    "airbnb",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "jest",
  ],
  "rules": {
    "prettier/prettier": [
      "error"
    ],
    // use object destructured imports / exports
    "import/prefer-default-export": "off",
    // allows window._paq to be used in the code
    "no-underscore-dangle": "off",
    "react/function-component-definition": [
      2,
      {
        "namedComponents": "function-declaration",
      },
    ],
    "jest/no-disabled-tests": "warn",
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error",
    "jest/prefer-to-have-length": "warn",
    "jest/valid-expect": "error"
  },
  "env": {
    "browser": true
  },
  "settings": {
    // should match aliases in webpack.config.js
    "import/resolver": {
      "alias": {
        "map": [
          [
            "@src",
            "./src"
          ]
        ]
      }
    }
  },
  "overrides": [
    {
      "files": [
        "**/*.test.js",
        "**/*.test.jsx"
      ],
      "env": {
        "jest": true
      },
      "rules": {
        "react/prop-types": "off"
      }
    }
  ]
}